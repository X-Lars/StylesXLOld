<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xl="clr-namespace:StylesXL">

    <ResourceDictionary.MergedDictionaries>

        <!-- Merges the specified dictionaries containing custom control colors into Skins\Dark.xaml -->
        <ResourceDictionary Source="pack://application:,,,/StylesXL;Component/Resources/Colors.xaml"/>

    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="{ComponentResourceKey xl:Styles, TestBrush}" Color="DarkMagenta"/>

    <SolidColorBrush x:Key="{ComponentResourceKey xl:Styles, ControlBrush}" Color="{StaticResource WindowsSystemControlDark}" />
    <SolidColorBrush x:Key="{ComponentResourceKey xl:Styles, ControlBorderBrush}" Color="{StaticResource WindowsSystemControlDarkDarkColor}" />
    <SolidColorBrush x:Key="{ComponentResourceKey xl:Styles, TextBrush}" Color="{StaticResource DefaultText}" />
    <SolidColorBrush x:Key="{ComponentResourceKey xl:Styles, ControlSelectedBrush}" Color="{StaticResource DefaultControlSelected}" />
    
</ResourceDictionary>